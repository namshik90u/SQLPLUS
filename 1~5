//3과제 CREATE CUSTOMINFO2_TBL (중복으로 "2"추가)
CREATE TABLE CUSTOMINFO2_TBL(CUSTID varchar2(10) NOT NULL PRIMARY KEY,
NAME varchar2(20),
SEX char(10),
BIRTH date,
B_TIME varchar2(10),
CALENDER varchar2(10));

//3과제 CUSTOMINFO2_TBL INSERT문
